{
    "extends": [ "plugin:vue/recommended" ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        // в классах запятую не надо, как и function
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "no-console": 0,
        "no-debugger": 0,
        "block-scoped-var": "warn",
        "no-use-before-define": ["warn", { "functions": false, "classes": false }],
        "complexity": ["warn", 20],
        "no-empty-function": [
            "warn"
        ],
        "no-labels": "warn",
        "no-floating-decimal": "warn",
        "no-global-assign": "warn",
        "no-loop-func": "warn",
        "no-magic-numbers": ["warn", { "detectObjects": true, "ignore": [ -1, 0, 1, 2, 3, 4, 5, 10, 20, 24, 50, 60, 100, 500, 1000 ] }],
        "no-multi-spaces": [
            "warn",
            {
                "exceptions": {
                    "Property": true,
                    "VariableDeclarator": true,
                    "AssignmentExpression": true
                }
            }
        ],
        "no-multi-str": "warn",
        "no-new-wrappers": "warn",
        "no-new": "warn",
        "no-param-reassign": ["warn", { "props": false }],
        "no-return-assign": ["warn", "always"],
        "no-self-compare": "warn",
        "no-useless-concat": "warn",
        "no-unused-vars": "warn",

        "vars-on-top": "warn",
        "yoda": ["warn", "never", { "onlyEquality": true }],

        "func-call-spacing": ["warn", "never"],
        "space-infix-ops": "warn",
        "space-before-function-paren": ["warn", "never"],
        "space-before-blocks": [
            "warn",
            {
                "functions": "always",
                "keywords": "always",
                "classes": "always"
            }
        ],
        "regru/no-space-in-parens": [
            "warn",
            "always",
            {
                "exceptions": ["(STRING)"]
            }
        ],
        "space-unary-ops": [
            1,
            {
                "words": true,
                "nonwords": false
            }
        ],
        "object-curly-spacing": ["warn", "always",
            {
                "arraysInObjects": true,
                "objectsInObjects": true
            }
        ],
        "max-params": ["warn", 4],
        "no-whitespace-before-property": "warn",
        "key-spacing":[
            "warn",
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "beforeColon": true,
                    "afterColon": true,
                    "align": "colon",
                    "mode": "strict"
                }
            }
        ],
        "keyword-spacing": ["warn", { "before": true }],
        "max-len": [
            1,
            120,
            {
                "ignoreUrls": true,
                "ignoreTrailingComments": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "no-inner-declarations": 1,
        "one-var-declaration-per-line": ["warn", "always"],
        "one-var": ["warn", "never"],
        "camelcase": "warn",
        "newline-after-var": ["warn", "always"],
        "newline-before-return": "warn",
        "object-curly-newline": [
            "warn",
            {
                "multiline": true
            }
        ],
        "object-property-newline": ["warn"],
        "operator-linebreak": ["warn", "before"],
        "brace-style": ["warn", "stroustrup"],
        "lines-around-comment": ["warn",
            {
                "beforeBlockComment": true,
                "beforeLineComment": true
            }
        ],
        "spaced-comment": ["warn", "always",
            {
                "block": { "balanced": true },
                "markers": ["global"]
            }
        ],
        "curly": "warn",
        "semi-spacing": "warn",

        "vue/no-parsing-error": 1,

        "vue/valid-template-root": 1,
        "vue/valid-v-bind": 1,
        "vue/valid-v-cloak": 1,
        "vue/valid-v-else-if": 1,
        "vue/valid-v-else": 1,
        "vue/valid-v-for": 1,
        "vue/valid-v-html": 1,
        "vue/valid-v-if": 1,
        "vue/valid-v-model": 1,
        "vue/valid-v-on": 1,
        "vue/valid-v-once": 1,
        "vue/valid-v-pre": 1,
        "vue/valid-v-show": 1,
        "vue/valid-v-text": 1,

        "vue/html-end-tags": 1,
        "vue/no-confusing-v-for-v-if": 1,
        "vue/no-textarea-mustache": 1,
        "vue/require-component-is": 1,
        "vue/require-v-for-key": 1,

        "vue/attribute-hyphenation": 1,
        "vue/html-self-closing": 1,
        "vue/mustache-interpolation-spacing": 1,
        "vue/name-property-casing": 1,
        "vue/no-multi-spaces": 1,
        "vue/v-bind-style": 1,
        "vue/v-on-style": 1,

        "vue/jsx-uses-vars": 1
    }
}
